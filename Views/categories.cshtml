<!DOCTYPE html>
<html>
  <head>
    <title>Word Count!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>To Do List</h1>
    <hr />
    <h2>Categories:</h2>
    @if (@Model.Count == 0)
    {
      <p>There are no categories.</p>
    }
    <ul>

      @if (@Model.Count != 0)
      {
        @foreach (var category in Model)
        {
          <li><a href="/categories/@category.GetId()">@category.GetName()</a> |
            <a href="/category/edit/@category.GetId()">Edit</a>|
            <a href="/category/delete/@category.GetId()">Delete</a>
          </li>
        }
      }
    </ul>
    <h4><a href="/categories/new">Add a new category</a></h4>
    <h4><a href="/">Return home</a></h4>

    <form action="/categories/delete" method="post">
      <button type="submit">Clear all categories</button>
    </form>
  </body>
</html>
